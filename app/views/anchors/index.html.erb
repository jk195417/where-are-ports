<h1>Anchors</h1>
<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Elevation</th>
      <th>What 3 words</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anchors.each do |anchor| %>
      <tr>
        <td><%= anchor.latitude %></td>
        <td><%= anchor.longitude %></td>
        <td><%= anchor.elevation %></td>
        <td><%= anchor.what_3_words %></td>
        <td><%= link_to 'Show', anchor, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_anchor_path(anchor), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', anchor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Anchor', new_anchor_path, class: 'btn btn-primary' %>
